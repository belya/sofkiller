<div class="container">
  <%= simple_form_for [@question, @answer] do |f| %>

    <div class="form-inputs">
      <%= f.input :text %>
      <%= f.input :user_id, as: :hidden %>
      <%= f.input :question_id, as: :hidden %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "button"%>
    </div>
  <% end %>
</div>