<div class="container">
  <%= simple_form_for [@category, @question] do |f| %>

    <div class="form-inputs">
      <%= f.input :text %>
      <%= f.association :user, label_method: :email, value_method: :id, include_blank: false %>
      <%= f.association :category, label_method: :title, value_method: :id, include_blank: false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "button"%>
    </div>
  <% end %>
</div>