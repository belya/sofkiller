<div class="page-header">
  <h1><%= link_to @question.category.title, @question.category %></h1>
</div>
<div class="container">
  <p>
    <%= link_to("Give answer", new_question_answer_path(@question), class:"btn btn-primary") if can? :create, @question => Answer %>
    <%= link_to("Edit question", edit_question_path(@question), class:"btn btn-primary pull-right") if can? :update, @question %>
  </p>
  <div class="jumbotron">
    <h3><%= @question.text %></h3>
  </div>
  <p class="text-right"><%= link_to @question.user.name, @question.user %></p>
  <%= render 'answers/answers', answers: @question.answers %>
</div>