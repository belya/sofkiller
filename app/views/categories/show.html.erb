<div class="page-header">
  <h1><%= @category.title %></h1>
</div>
<div class="container">
  <p>
    <%= link_to("Edit category", edit_category_path(@category), class:"btn btn-primary") if can? :update, Category %>
    <%= link_to("Create question", new_category_question_path(@category), class:"btn btn-primary pull-right") if can? :create, Question %>
  </p>
  <%= render 'questions/questions', questions: @category.questions %>
</div>