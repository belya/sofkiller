<div class="page-header">
  <h1>Create category</h1>
</div>
<div class="container">
  <%= simple_form_for @category do |f| %>

    <div class="form-inputs">
      <%= f.input :title %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "button"%>
    </div>
  <% end %>
</div>