<div class="container">
  <%= simple_form_for @user do |f| %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :status, as: :select, include_blank: false, collection: User.statuses %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "button"%>
    </div>
  <% end %>
</div>